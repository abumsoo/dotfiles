# Open terminals in floating mode
# for_window [class="URxvt"] floating enable

# Autostarting programs
exec --no-startup-id i3-msg "exec /home/bumshakabum/.i3/load_layout.sh"

# Start compton with config file in ~/.config/compton.conf
exec_always --no-startup-id compton 

# exec --no-startup-id conky -c ~/.config/empty_conky

# Autostart redshift
exec --no-startup-id redshift-gtk

#Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 1 +2.5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 1 -2.5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 1 toggle # mute sound

# Media player controls
bindsym XF86AudioPlay exec mpc toggle
bindsym XF86AudioPause exec mpc stop
bindsym XF86AudioNext exec mpc next
bindsym XF86AudioPrev exec mpc prev